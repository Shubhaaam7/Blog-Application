@{
}
@model List<BlogApplication.Models.Employee>
@{
    PaginatedList pager = new PaginatedList();
    int pageNo = 0;

    if (ViewBag.pager!=null)
    {

        pager = ViewBag.pager;
        pageNo = pager.CurrentPage;
    }


}
<partial name="_Pager" model="@pager"></partial>
<table class="table">
    <thead>

        <tr>

            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Joining Date</th>
            <th>Salary</th>
            <th>Team</th>
            <th>Senior Managment</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.First_Name</td>
                <td>@item.Gender</td>
                <td>@item.Start_Date</td>
                <td>@item.Salary</td>
                <td>@item.Team</td>
                <td>@item.Senior_Management</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }

    </tbody>
  


</table>
<partial name="_Pager" model="@pager"></partial>


